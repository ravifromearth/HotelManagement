@page
@model HospitalManagement.Web.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white">
                <h2 class="text-center">Hospital Management System</h2>
            </div>
            <div class="card-body">
                <h3 class="card-title text-center mb-4">Register as a Patient</h3>
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="RegisterInput.Email" class="form-label">Email Address</label>
                            <input asp-for="RegisterInput.Email" class="form-control" />
                            <span asp-validation-for="RegisterInput.Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="RegisterInput.Password" class="form-label">Password</label>
                            <input asp-for="RegisterInput.Password" class="form-control" type="password" />
                            <span asp-validation-for="RegisterInput.Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="RegisterInput.ConfirmPassword" class="form-label">Confirm Password</label>
                            <input asp-for="RegisterInput.ConfirmPassword" class="form-control" type="password" />
                            <span asp-validation-for="RegisterInput.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="RegisterInput.Name" class="form-label">Full Name</label>
                            <input asp-for="RegisterInput.Name" class="form-control" />
                            <span asp-validation-for="RegisterInput.Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="RegisterInput.Phone" class="form-label">Phone Number</label>
                            <input asp-for="RegisterInput.Phone" class="form-control" />
                            <span asp-validation-for="RegisterInput.Phone" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="RegisterInput.Address" class="form-label">Address</label>
                            <input asp-for="RegisterInput.Address" class="form-control" />
                            <span asp-validation-for="RegisterInput.Address" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="RegisterInput.BirthDate" class="form-label">Date of Birth</label>
                            <input asp-for="RegisterInput.BirthDate" class="form-control" type="date" />
                            <span asp-validation-for="RegisterInput.BirthDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="RegisterInput.Gender" class="form-label">Gender</label>
                            <select asp-for="RegisterInput.Gender" class="form-select">
                                <option value="">Select Gender</option>
                                <option value="M">Male</option>
                                <option value="F">Female</option>
                                <option value="O">Other</option>
                            </select>
                            <span asp-validation-for="RegisterInput.Gender" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mb-3">
                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <p>
                    Already have an account?
                    <a asp-page="./Login" class="text-decoration-none">Login here</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}