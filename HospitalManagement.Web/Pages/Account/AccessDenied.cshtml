@page
@model HospitalManagement.Web.Pages.Account.AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
}

<div class="container text-center">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-danger mt-5">
                <div class="card-header bg-danger text-white">
                    <h1 class="h3 mb-0">Access Denied</h1>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 4rem;"></i>
                    </div>
                    <h2 class="h4 mb-3">You do not have permission to access this resource.</h2>
                    <p class="mb-4">Please contact your administrator if you believe this is an error.</p>

                    <div class="d-grid gap-2">
                        <a asp-page="/Index" class="btn btn-primary">Return to Home Page</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>